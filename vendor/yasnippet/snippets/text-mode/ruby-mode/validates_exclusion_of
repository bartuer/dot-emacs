# name: validates_exclusion_of validate model api rails 
# (rdoc "ActiveRecord::Validations::ClassMethods#validates_exclusion_of")
# --
validates_exclusion_of(:${1:name},
                       :on => :create :update :save,
                       :in => a,
                       :allow_nil => false,
                       :allow_blank => false,
                       :if => Proc.new { |o| ${2:condition}},
                       :message => '')