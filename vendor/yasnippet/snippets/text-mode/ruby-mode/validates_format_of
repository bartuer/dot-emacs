# name: validates_format_of validate model api rails 
# (rdoc "ActiveRecord::Validations::ClassMethods#validates_format_of")
# --
validates_format_of(:{1:name},
                    :on => :create :update :save,
                    :with => /${2:regex}/,
                    :allow_blank => false,
                    :allow_nil => false,
                    :allow_blank => false,
                    :if => Proc.new { |o| {3:condition}},
                    :message => '')