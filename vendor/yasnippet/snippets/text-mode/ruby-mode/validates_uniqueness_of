validates_uniqueness_of(:${1:name},
                        :on => :create :update :save,
                        :allow_nil => false,
                        :scope => :${2:attr}
                        :case_sensitive => false,
                        :if => Proc.new { |o| ${3:condition}},
                        :message => '')